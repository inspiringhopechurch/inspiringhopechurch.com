{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    // https://www.gatsbyjs.com/docs/how-to/custom-configuration/typescript/#current-limitations
    "isolatedModules": true,
    "target": "ESNext",
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.js"
  ]
}